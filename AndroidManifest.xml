
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ahluwalia.atlas"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    
    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ahluwalia.atlas.MenuScreen"
            android:label="@string/app_name"
            android:configChanges="keyboardHidden|orientation|screenSize" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".FlagScreen" 
            android:configChanges="keyboardHidden|orientation|screenSize" 
            android:parentActivityName=".MenuScreen"
            android:windowSoftInputMode="stateHidden" >
        		<meta-data
            		android:name="android.support.PARENT_ACTIVITY"
            		android:value=".MenuScreen" />
        </activity>
        
        <activity android:name=".FlagPagerScreen" 
            android:configChanges="keyboardHidden" 
            android:exported="true" 
            android:parentActivityName=".FlagScreen" >
        		<meta-data
            		android:name="android.support.PARENT_ACTIVITY"
            		android:value=".FlagScreen" />
        </activity> 
       
        <activity android:name=".GameScreen" 
            android:configChanges="keyboardHidden|orientation|screenSize" 
            android:parentActivityName=".MenuScreen" >
        		<meta-data
            		android:name="android.support.PARENT_ACTIVITY"
            		android:value=".MenuScreen" />
        </activity>
        
        <activity android:name=".AboutScreen" 
            android:configChanges="keyboardHidden|orientation|screenSize" 
            android:parentActivityName=".MenuScreen" >
        		<meta-data
            		android:name="android.support.PARENT_ACTIVITY"
            		android:value=".MenuScreen" />
        </activity>
        		
        <activity android:name=".WebViewScreen"  
            android:configChanges="keyboardHidden|orientation|screenSize" 
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" />
        
        <activity
            android:name="com.startapp.android.publish.list3d.List3DActivity"
            android:taskAffinity="com.startapp.startappinterstitialexample.StartApp"
            android:theme="@android:style/Theme" />
        <activity android:name="com.google.android.gms.ads.AdActivity"
                  android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>

        <meta-data android:name="com.google.android.gms.version"
                   android:value="@integer/google_play_services_version"/>
    </application>

</manifest>